[Unit]
Description=Soulbase Gateway API
After=network.target
Wants=network-online.target

[Service]
Type=simple
User=soulbase
Group=soulbase
WorkingDirectory=/opt/soul-base
Environment=GATEWAY_CONFIG_FILE=/etc/soulbase/gateway.toml
Environment=RUST_LOG=info
ExecStart=/opt/soul-base/bin/soulbase-gateway
Restart=on-failure
RestartSec=5s
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
